<odoo>
    <data>

        <record id="view_admission_tree" model="ir.ui.view">
            <field name="name">hospital.admission.tree</field>
            <field name="model">hospital.admission</field>
            <field name="arch" type="xml">
                <tree string="Admission" decoration-danger="priority=='high'" decoration-info="priority=='normal'"
                      decoration-success="priority=='low'">
                    <field name="patient_id" widget="badge"/>
                    <field name="doctor_admissions_id" widget="badge"/>
                    <field name="bed_id" widget="badge"/>
                    <field name="admission_date" widget="date"/>
                    <field name="discharge_date" widget="date"/>
                    <field name="diagnosis_ids"/>
                    <field name="treatment_ids"/>
                    <field name="state" widget="badge" decoration-success="state=='admitted'"/>
                    <field name="priority" widget="badge" decoration-danger="priority=='high'" decoration-info="priority=='normal'"
                           decoration-success="priority=='low'"/>
                </tree>
            </field>
        </record>

        <record id="view_admission_form" model="ir.ui.view">
            <field name="name">hospital.admission.form</field>
            <field name="model">hospital.admission</field>
            <field name="arch" type="xml">
                <form string="Admission" class="oe_form_sheet">
                    <sheet>
                        <div class="oe_title kanban_bottom">
                            <label for="patient_id" class="oe_edit_only"/>
                            <h1>
                                <div style="display: flex;">
                                    <i class="fa fa-user" style="margin-right: 10px;"/><field name="patient_id" nolabel="1" style="margin-right: 10px;"/>SSN:<field name="patient_social_security_number" nolabel="1" style="margin-left: 10px;"/>
                                </div>
                            </h1>
                        </div>
                        <div class="kanban_right">
                            <button name="discharge" string="DISCHARGE" type="object" class="oe_highlight"/>
                            <div>
                                <label for="state" class="oe_edit_only"/>
                                <h2>
                                    <i class="fa fa-info-circle"/>
                                    <field name="state" nolabel="1"/>
                                </h2>
                                <label for="priority" class="oe_edit_only"/>
                                <h2>
                                    <i class="fa fa-exclamation-triangle"/>
                                    <field name="priority" nolabel="1"/>
                                </h2>
                            </div>

                        </div>
                        <div class="oe_doctor">
                            <label for="doctor_admissions_id" class="oe_edit_only"/>
                            <h2>
                                <i class="fa fa-user-md"/>
                                <field name="doctor_admissions_id" nolabel="1"/>
                            </h2>
                        </div>
                        <div class="oe_bed">
                            <label for="bed_id" class="oe_edit_only"/>
                            <h3>
                                <i class="fa fa-bed"/>
                                <field name="bed_id" nolabel="1"/>
                            </h3>
                        </div>
                        <div class="oe_date">
                            <label for="admission_date" class="oe_edit_only"/>
                            <h4>
                                <i class="fa fa-calendar"/>
                                <field name="admission_date" nolabel="1"/>
                            </h4>
                        </div>
                        <div class="oe_date">
                            <label for="discharge_date" class="oe_edit_only"/>
                            <h5>
                                <i class="fa fa-calendar-check-o"/>
                                <field name="discharge_date" nolabel="1"/>
                            </h5>
                        </div>

                        <separator string="Diagnosis &amp; Treatment"/>

                        <div class="oe_diagnosis">
                            <label for="diagnosis_ids" class="oe_edit_only"/>
                            <h7>
                                <i class="fa fa-stethoscope"/>
                                <field name="diagnosis_ids" nolabel="1"/>
                            </h7>
                        </div>
                        <div class="oe_treatment">
                            <label for="treatment_ids" class="oe_edit_only"/>
                            <h7>
                                <i class="fa fa-medkit"/>
                                <field name="treatment_ids" nolabel="1"/>
                            </h7>
                        </div>


                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_admission_kanban" model="ir.ui.view">
            <field name="name">hospital.admission.kanban</field>
            <field name="model">hospital.admission</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click   {{record.priority.raw_value == 'high' ? 'oe_kanban_color_red' : (record.priority.raw_value == 'normal' ? 'oe_kanban_color_blue' : 'oe_kanban_color_green')}}">
                                <div class="oe_kanban_details">
                                    <div class="oe_kanban_content div_centered">
                                        <h2>
                                            <div style="display: flex;">
                                                <i class="fa fa-user" style="margin-right: 10px;"/><field name="patient_id" nolabel="1" style="margin-right: 10px;"/>SSN:<field name="patient_social_security_number" nolabel="1" style="margin-left: 10px;"/>
                                            </div>
                                        </h2>
                                    </div>
                                    <div class="oe_kanban_content kanban_left">
                                        <h3>
                                            <i class="fa fa-user-md"/>
                                            Doctor:
                                            <field name="doctor_admissions_id"/>
                                        </h3>
                                    </div>
                                    <div class="oe_kanban_content kanban_right">
                                        <h4>
                                            <i class="fa fa-bed"/>
                                            Bed:
                                            <field name="bed_id"/>
                                        </h4>
                                    </div>
                                    <div class="oe_kanban_content kanban_bottom">
                                        <h4>
                                            <i class="fa fa-calendar"/>
                                            <field name="admission_date" widget="date"/>
                                        </h4>
                                    </div>
                                    <div class="oe_kanban_content">
                                        <h5>
                                            <i class="fa fa-calendar-check-o"/>
                                            <field name="discharge_date" widget="date"/>
                                        </h5>
                                    </div>
                                    <div class="oe_kanban_content kanban_bottom">
                                        <h3>
                                            <i class="fa fa-stethoscope"/>
                                            Diagnosis:
                                            <field name="diagnosis_ids"/>
                                        </h3>
                                    </div>
                                    <div class="oe_kanban_content">
                                        <h3>
                                            <i class="fa fa-medkit"/>
                                            Treatment:
                                            <field name="treatment_ids"/>
                                        </h3>
                                    </div>
                                    <div class="oe_kanban_content kanban_left">
                                        <h3>
                                            <i class="fa fa-info-circle"/>
                                            State:
                                            <field name="state" widget="badge" decoration-success="state=='admitted'"/>
                                        </h3>
                                    </div>
                                    <div class="oe_kanban_content kanban_right">
                                        <h3>
                                            <i class="fa fa-exclamation-triangle"/>
                                            Priority:
                                            <field name="priority" widget="badge" decoration-danger="priority=='high'"
                                                   decoration-info="priority=='normal'"
                                                   decoration-success="priority=='low'"/>
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>