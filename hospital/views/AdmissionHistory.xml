<odoo>
<data>
    <record id="view_admission_history_tree" model="ir.ui.view">
        <field name="name">admission.history.tree</field>
        <field name="model">hospital.admission.history</field>
        <field name="arch" type="xml">
            <tree string="Admission History">
                <field name="patient_id" />
                 <field name="patient_last_name"/>
                  <field name="patient_admitted"/>
                <field name="floor_id"/>
                <field name="bed_id"/>
                <field name="admission_date"/>
                <field name="discharge_date"/>
            </tree>
        </field>
    </record>

  <record id="view_admission_history_form" model="ir.ui.view">
    <field name="name">admission.history.form</field>
    <field name="model">hospital.admission.history</field>
    <field name="arch" type="xml">
        <form string="Admission History" style="width: 100%;">
            <sheet>
                <div class="oe_title">
                    <h1>
                        <!-- Icono de usuario junto al campo del paciente -->
                        <i class="fa fa-user" style="font-size: 20px;"/>
                        <field name="patient_id"/>
                    </h1>
                </div>
                <group>
                    <!-- Campo de nombre del paciente -->
                    <field name="patient_name"/>
                    <!-- Campo de apellido del paciente -->
                    <field name="patient_last_name"/>
                      <!-- Campo de teléfono del paciente -->
                       <field name="patient_phone"/>
                </group>
                <group>
                    <!-- Campo de admisión del paciente -->
                    <field name="patient_admitted"/>
                </group>
                <group>
                    <!-- Campos de piso, cama, fecha de admisión y fecha de salida -->
                    <field name="floor_id"/>
                    <field name="bed_id"/>
                    <field name="admission_date"/>
                    <field name="discharge_date"/>
                </group>
            </sheet>
        </form>
    </field>
</record>



 
    <record id="view_admission_history_kanban" model="ir.ui.view">
        <field name="name">admission.history.kanban</field>
        <field name="model">hospital.admission.history</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_image">
                                <img t-att-src="'/web/image/hospital.admission.history/' + record.id + '/image'" class="oe_kanban_avatar oe_kanban_image" />
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="oe_kanban_title">
                                    <field name="patient_id"/>
                                </strong>
                                <div class="oe_kanban_content">
                                    <field name="patient_name"/>
                                    <field name="patient_last_name"/>
                                    <field name="patient_admitted"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_admission_history" model="ir.actions.act_window">
        <field name="name">Admission History</field>
        <field name="res_model">hospital.admission.history</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="menu_admission_history" name="Admission History" parent="menu_hospital" action="action_admission_history"/>



    

</data>
</odoo>