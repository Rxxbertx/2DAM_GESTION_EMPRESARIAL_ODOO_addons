<odoo>
    <data>
        <record id="view_extended_patient_form" model="ir.ui.view">
            <field name="name">extended.patient.form</field>
            <field name="model">hospital.extended.patient</field>
            <field name="inherit_id" ref="hospital.hospital_patient_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]/group" position="inside">
                    <label for="social_security_number" string="Social Security Number"/>
                    <h2>
                        <i class='fa fa-id-card'></i>
                        <field name="social_security_number"/>
                    </h2>
                </xpath>
            </field>
        </record>

        <record id="view_extended_patient_tree" model="ir.ui.view">
            <field name="name">extended.patient.tree</field>
            <field name="model">hospital.extended.patient</field>
            <field name="inherit_id" ref="hospital.hospital_patient_tree"/>
            <field name="arch" type="xml">
                <!-- Agregar el campo adicional al Ã¡rbol de pacientes -->
                <xpath expr="//tree" position="inside">
                    <field name="social_security_number"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>