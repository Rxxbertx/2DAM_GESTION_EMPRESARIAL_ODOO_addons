<odoo>
    <data>


        <record id="view_doctor_tree" model="ir.ui.view">
            <field name="name">hospital.doctor.tree</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <tree string="Doctors">
                    <field name="name"/>
                    <field name="last_name"/>
                    <field name="full_name"/>
                    <field name="specialization"/>
                    <field name="work_schedule" widget="float_time"/>
                    <field name="phone" widget="phone"/>
                    <field name="email" widget="email"/>
                    <field name="treated_patients_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>


        <record id="view_doctor_kanban" model="ir.ui.view">
            <field name="name">hospital.doctor.kanban</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_view">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div class="kanban_title">
                                        <strong class="o_kanban_record_title">
                                            <i class="fa fa-user-md" aria-hidden="true"/>
                                            <field name="name"/>
                                            <field name="last_name"/>(<field name="age"/>)
                                        </strong>
                                    </div>
                                    <div class="oe_kanban_content">
                                        <i class="fa fa-stethoscope" aria-hidden="true"/>
                                        <field name="specialization"/>
                                    </div>
                                    <div class="oe_kanban_content">
                                        <i class="fa fa-clock-o" aria-hidden="true"/>
                                        <field name="work_schedule" widget="float_time"/>
                                    </div>
                                    <div class="oe_kanban_content">
                                        <i class="fa fa-phone" aria-hidden="true"/>
                                        <field name="phone"/>
                                    </div>
                                    <div class="oe_kanban_content">
                                        <i class="fa fa-envelope" aria-hidden="true"/>
                                        <field name="email"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="view_doctor_form" model="ir.ui.view">
            <field name="name">hospital.doctor.form</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <form string="Doctor Information" class="oe_form_sheet">
                    <sheet>
                        <div class="kanban_title">
                            
                            <h1>
                                <div>
                                <field name="name"/>
                                <field name="last_name"/>
                        </div></h1>
                            
                        </div>
                        <h3>
                            <div>
                                <i class="fa fa-id-card" aria-hidden="true"/>
                                <field name="full_name" readonly="1"/>
                                <br/>
                                <i class="fa fa-birthday-cake" aria-hidden="true"/>
                                <field name="age"/>
                                <i class="fa fa-calendar" aria-hidden="true"/>
                                <field name="date_of_birth"/>
                            </div>
                            <div>
                                <i class="fa fa-stethoscope" aria-hidden="true"/>
                                <field name="specialization"/>
                                <br/>
                                <i class="fa fa-clock-o" aria-hidden="true"/>
                                <field name="work_schedule" widget="float_time"/>
                            </div>
                      
                       
                            <div>
                                <i class="fa fa-phone" aria-hidden="true"/>
                                <field name="phone" widget="phone"/>
                                <i class="fa fa-envelope" aria-hidden="true"/>
                                <field name="email" widget="email"/>
                            </div>
                        </h3>
                        <notebook>
                            <page string="Patients">
                               
                                        <i class="fa fa-users" aria-hidden="true"/>
                                        <field name="patients"/>
                               
                            </page>
                            <page string="Treated Patients">
                                
                                        <i class="fa fa-users" aria-hidden="true"/>
                                        <field name="treated_patients_ids"/>
                               
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
