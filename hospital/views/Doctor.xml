<odoo>
  <data>

    <record model="ir.ui.view" id="hospital.doctor_list">
      <field name="name">Doctor lista</field>
      <field name="model">hospital.doctor</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="last_name"/>
          <field name="specialization"/>
        </tree>
      </field>
    </record>



   <record model="ir.ui.view" id="hospital.doctor_form">
        <field name="name">Doctor forma</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
            <sheet>
                <group>
                <field name="name"/>
                <field name="last_name"/>
                <field name="specialization"/>
                </group>
            </sheet>
            </form>
        </field>
        </record>

        <record model="ir.actions.act_window" id="hospital.doctor_action_window">
        <field name="name">Doctor window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        </record>



    </data>
</odoo>
