<odoo>
    <data>
        <record id="view_bed_tree" model="ir.ui.view">
            <field name="name">hospital.bed.tree</field>
            <field name="model">hospital.bed</field>
            <field name="arch" type="xml">
                <tree string="Bed">
                    <field name="name"/>
                    <field name="floor_id"/>
                    <field name="state" widget="badge" decoration-success="state == 'available'"
                           decoration-danger="state == 'occupied'"/>
                    <field name="type" widget="statusbar"/>
                </tree>
            </field>
        </record>


        <record id="view_bed_form" model="ir.ui.view">
            <field name="name">hospital.bed.form</field>
            <field name="model">hospital.bed</field>
            <field name="arch" type="xml">
                <form string="Bed" class="oe_form_sheet">
                    <templates>
                    <sheet>
                        <div class="oe_title div_centered">
                            <h1>
                                <i class="fa fa-bed" role="img" aria-label="Bed"/>
                                <field name="name" widget="char" placeholder="Bed Name"/>
                            </h1>
                        </div>
                        <div>
                            Bed Type:
                            <field name="type" widget="selection"/>
                        </div>

                        <div>
                            <i class="fa fa-building" role="img" aria-label="Floor"/>
                            <field name="floor_id"/>
                            <i class="fa fa-heartbeat" role="img" aria-label="State"/>
                            <field name="state" widget="badge" decoration-success="state == 'available'"
                                   decoration-danger="state == 'occupied'"/>
                        </div>


                        <div>
                            <i class="fa fa-user" role="img" aria-label="Patient"/>
                            Patient:
                            <br/>
                            <field name="patient_id" widget="list" readonly="true"/>
                        </div>
                    </sheet>
                    </templates>
                </form>
            </field>
        </record>


        <record id="view_bed_kanban" model="ir.ui.view">
            <field name="name">hospital.bed.kanban</field>
            <field name="model">hospital.bed</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_color_default oe_fade">
                    <field name="name"/>
                    <field name="floor_id"/>
                    <field name="state"/>
                    <field name="type"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click  {{record.state.raw_value == 'occupied' ? 'oe_kanban_color_red' : 'oe_kanban_color_green'}}">
                                <div class="oe_kanban_details">


                                    <div class="kanban_title">

                                        <strong class="o_kanban_record_title">
                                            <i class="fa fa-bed" role="img" aria-label="Bed"/>
                                            <field name="name"/>
                                        </strong>

                                    </div>


                                    <div class="div_centered">
                                        <field name="type" widget="statusbar"/>
                                    </div>


                                    <div class="kanban_right">
                                        <i class="fa fa-building" role="img" aria-label="Floor"/>
                                        <field name="floor_id"/>
                                    </div>
                                    <div class="kanban_left">
                                        <i class="fa fa-heartbeat" role="img" aria-label="State"/>
                                        <field name="state" widget="badge" decoration-success="state == 'available'"
                                               decoration-danger="state == 'occupied'"/>
                                    </div>


                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>