<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="pokemon_pokemon_list">
            <field name="name">pokemon.pokemon.list</field>
            <field name="model">pokemon.pokemon</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="nickname"/>
                    <field name="img" widget="image" options="{'zoom': true}"/>

                    <field name="pokedex_number"/>


                    <field name="ability"/>
                    <field name="pokemon_ability"/>
                    <field name="hidden_ability"/>
                    <field name="type_1"/>
                    <field name="type_2"/>
                    <field name="atk"/>
                    <field name="hp"/>
                    <field name="defense"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="taller_pokemon_form">
            <field name="name">pokemon.pokemon.form</field>
            <field name="model">pokemon.pokemon</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="nickname" placeholder="Nombre del pokemon"/>
                            </h1>
                        </div>
                        <group string="Información de la Especie">
                            <field name="specie"/>
                            <field name="pokedex_number"/>
                            <field name="name"/>
                            <field name="type_1"/>
                            <field name="type_2"/>
                            <field name="ability"/>
                            <field name="hidden_ability"/>
                        </group>
                        <group string="Información del Pokemon">
                            <field name="pokemon_ability"/>
                            <field name="atk"/>
                            <field name="hp"/>
                            <field name="defense"/>
                            <field name="img" widget="image" options="{'zoom': true}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="pokemon_action_window">
            <field name="name">pokemon</field>
            <field name="res_model">pokemon.pokemon</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
